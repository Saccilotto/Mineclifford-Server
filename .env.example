# Project Configuration
PROJECT_NAME=mineclifford

# Cloud Provider Credentials
# AWS Configuration (for AWS provider)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-2
AWS_ACCOUNT_ID=your_account_id

# Azure Configuration (for Azure provider)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Terraform State Storage
# Override default storage locations if needed
# BUCKET_NAME=custom-terraform-state-bucket
# AZURE_STORAGE_ACCOUNT=customstorageaccount
# GITHUB_REPO=your-username/your-repo

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=mineclifford
PRIMARY_HOST=postgres_primary
REPLICA_HOST=postgres_replica

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@mineclifford.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password
PGADMIN_LISTEN_PORT=5050

# Web Dashboard Configuration
DATABASE_URL=sqlite:///app/data/mineclifford.db
LOG_LEVEL=INFO
REDIS_URL=redis://redis:6379

# Application Configuration
DOMAIN_NAME=mineclifford.com
ACME_EMAIL=admin@mineclifford.com
NEXT_PUBLIC_API_URL=https://api.mineclifford.com
BACKEND_PORT=8000
FRONTEND_PORT=80

# Cloudflare Configuration (for DNS + DDoS protection + Let's Encrypt)
CF_API_EMAIL=your_email@example.com
CF_API_TOKEN=your_cloudflare_api_token
CF_ZONE_ID=your_cloudflare_zone_id

# How to get Cloudflare API Token:
# 1. Go to https://dash.cloudflare.com/profile/api-tokens
# 2. Create Token -> Edit zone DNS template
# 3. Permissions: Zone:DNS:Edit, Zone:Zone:Read
# 4. Zone Resources: Include -> Specific zone -> mineclifford.com

# Service Ports
POSTGRES_PRIMARY_PORT=5432
POSTGRES_REPLICA_PORT=5433
PGBOUNCER_PORT=6432
TRAEFIK_DASHBOARD_PORT=8080

# Traefik Dashboard Configuration
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD_HASH=your_bcrypt_hash
# Generate hash with: ./scripts/generate-basicauth.sh admin yourpassword
# Example: admin:$$2y$$05$$vW8... (note the double $$)

# DuckDNS Configuration (optional, for dynamic DNS)
DUCKDNS_TOKEN=your_duckdns_token
DUCKDNS_SUBDOMAIN=mineclifford

# Regional Configuration
TZ=America/Sao_Paulo

# Minecraft Configuration (defaults)
MINECRAFT_VERSION=latest
MINECRAFT_GAMEMODE=survival
MINECRAFT_DIFFICULTY=normal
MINECRAFT_MEMORY=2G

# Security
# JWT_SECRET=your_jwt_secret_key_here
# API_RATE_LIMIT=100  # requests per minute per IP

# Optional: Docker Registry
# DOCKER_REGISTRY_URL=registry.example.com
# DOCKER_REGISTRY_USER=registry_user
# DOCKER_REGISTRY_PASS=registry_password
